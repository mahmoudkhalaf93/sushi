<?xml version="1.0" encoding="utf-8"?>
<layout    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_102sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_72sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:elevation="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop">
            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_18sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.facebook.drawee.view.SimpleDraweeView
                    fresco:placeholderImage="@drawable/backgroud_logo"
                    fresco:placeholderImageScaleType="centerCrop"
                    android:id="@+id/item_mycart_image"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardView3"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.cardview.widget.CardView


                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_90sdp"
                android:elevation="5dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardElevation="1dp"
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:id="@+id/stroklayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_23sdp"
            android:elevation="@dimen/_10sdp"

            app:cardCornerRadius="@dimen/_180sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop">
<View
    android:id="@+id/plus"
    android:clickable="true"
    android:layout_width="@dimen/_35sdp"
    android:layout_height="@dimen/_30sdp"
    android:focusable="true" />
            <View
                android:id="@+id/minus"
                android:clickable="true"
                android:layout_gravity="bottom"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_30sdp"
                android:focusable="true" />
            <ImageView

                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/_8sdp"
              android:layout_gravity="center_horizontal"
                android:src="@drawable/copy"
                android:contentDescription="@string/todo" />
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:layout_gravity="center"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_15sdp"
                />
            <ImageView

                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/invalid_name"
                android:contentDescription="@string/todo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itme_mycart_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            tools:text="Item11add"
            android:maxLength="9"
            android:fontFamily="@font/calibri"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_4sdp"
            app:layout_constraintStart_toEndOf="@+id/cardView4"
            app:layout_constraintTop_toTopOf="@+id/cardView4" />

        <TextView
            android:id="@+id/itme_mycart_description"
            android:layout_width="0dp"
            android:layout_height="44dp"

            android:paddingEnd="@dimen/_4sdp"
            android:paddingStart="@dimen/_4sdp"
            android:maxLength="64"
            android:maxLines="2"
            android:fontFamily="@font/calibri"
            tools:text="this product is so nice i want to bye three item of this product"
            android:textColor="@color/gray"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toStartOf="@+id/cardView5"
            app:layout_constraintStart_toEndOf="@+id/cardView4"
            app:layout_constraintTop_toBottomOf="@+id/itme_mycart_name" />

        <TextView
            android:id="@+id/itme_mycart_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri"
            android:maxLength="15"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textColor="@color/gray_text_in_profilepic"
            android:textSize="@dimen/_16sdp"
            fresco:layout_constraintBottom_toBottomOf="@+id/itme_mycart_name"
            fresco:layout_constraintEnd_toEndOf="@+id/itme_mycart_description"
            fresco:layout_constraintTop_toTopOf="@+id/itme_mycart_name"
            tools:text="60.59" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
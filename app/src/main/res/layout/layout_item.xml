<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/_10sdp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_10sdp"
   >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="@dimen/_72sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:elevation="@dimen/_10sdp"

        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_90sdp"
        android:elevation="5dp"
        app:cardElevation="0dp"
        android:paddingLeft="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_27sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_180sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itme_name"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/_5sdp"
android:text="Item 1"
        android:maxLength="15"
        android:fontFamily="@font/calibri"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="@+id/cardView4" />

    <TextView
        android:id="@+id/itme_description"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_2sdp"
        android:maxLength="64"
        android:maxLines="2"
        android:fontFamily="@font/calibri"
        android:text="this product is so nice i want to bye three item of this product"
        android:textColor="@color/gray"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="@+id/cardView5"
        app:layout_constraintStart_toEndOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/itme_name" />
</androidx.constraintlayout.widget.ConstraintLayout>